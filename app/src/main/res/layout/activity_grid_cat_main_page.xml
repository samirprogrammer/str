<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:textAlignment="center">

    <ImageView
        android:id="@+id/catThumb"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:src="@drawable/elephant"
        android:translationZ="@dimen/_6sdp" />

    <com.google.android.material.card.MaterialCardView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardCatMain"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:textAlignment="center"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        ads:cardBackgroundColor="#fc036f"
        ads:strokeColor="#fff"
        ads:strokeWidth="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardMaxElevation="@dimen/_5sdp">

        <TextView
            android:id="@+id/txtCatTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/angella"
            android:paddingLeft="@dimen/_55sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:text="Panchtatra"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/textcolor" />

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
